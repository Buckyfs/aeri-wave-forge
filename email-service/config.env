# AERI Email Service Configuration
# Rename this file to .env and fill in your actual values

# ===== OPTION 1: Supabase API (if you have JWT secret) =====
SUPABASE_URL=https://supabase.aeri-research.org
SUPABASE_SERVICE_KEY=YOUR_GENERATED_SERVICE_KEY_HERE
SUPABASE_JWT_SECRET=YOUR_JWT_SECRET_FROM_DOCKER_COMPOSE

# ===== OPTION 2: Direct Database Connection (Easier!) =====
DB_HOST=your-supabase-host.com
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=YOUR_DATABASE_PASSWORD
DB_SSL=false

# Gmail Configuration
EMAIL_USER=YOUR_GMAIL_ADDRESS_HERE
EMAIL_PASS=YOUR_GMAIL_APP_PASSWORD_HERE

# Email Settings
NOTIFICATION_EMAIL=natalie@aeri-research.org
PORT=3001
